name: Deploy all dApps

on:
  push:
    branches:
      - main
      - production

jobs:
  deploy:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        app:
          - name: mechanic-dapp
            path: apps/mechanic-dapp
            project_id: VERCEL_PROJECT_ID_MECHANIC
          - name: hexchain-dapp
            path: apps/hexchain-dapp
            project_id: VERCEL_PROJECT_ID_HEXCHAIN
          - name: token-dashboard
            path: apps/token-dashboard
            project_id: VERCEL_PROJECT_ID_TOKENDASH

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Install dependencies
        run: pnpm install

      - name: Build ${{ matrix.app.name }}
        run: pnpm run build
        working-directory: ${{ matrix.app.path }}

      - name: Deploy ${{ matrix.app.name }} to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets[matrix.app.project_id] }}
          vercel-args: '--prod'
        env:
          VERCEL_SCOPE: ${{ secrets.VERCEL_SCOPE }}
